<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
</head>

<body>

  <%= render "basic/header" %>

  <div class="wrapper">
    <div class="title">
      <h1>Live blog with Ruby</h1>
    </div>
    <div class="posts " id="post_section">
      <% @posts.each do |post| %>
        <div class="card" style="width: 25rem;">
          <div class="card-body">
              <a href="#" target="_blank">
                 <img class="card-img-top" style="width: 100%; height: 300pt;" src="<%= post.media %>">
              </a>
              <div class="body-trunc">
                <p><%= post.body %></p>
                <p><%= time_ago_in_words(post.dateTime) + " ago"%></p>
              </div>
          </div>
            </div>
        <% end %>
    </div>
  </div>

  <%= render "basic/footer" %>
</body>
</html>