<html lang="en">

<head>
  <title>Title</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>

<div id="page-container">
    <div id="content-wrap">
      <%= render "basic/header" %>

      <div class="container emp-profile">

          <div class="row">
            <div class="col-md-4">
              <div class="profile-img" style="height: 150px; width: 280px;">
                <img src="<%= @user.media %>" alt=""/>
              </div>
            </div>
            <div class="col-md-6" >
              <div class="profile-head" >
                <h5>
                  <%= @user.name %>
                </h5>

                <ul class="nav nav-tabs" id="myTab" role="tablist" >
                  <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">About</a>
                  </li>
                  <li class="nav-item">
                  </li>
                </ul>
                <p><%= @user.about %></p>
                <div style="height: 1px; background-color: RGB(222, 226, 230);"></div>
                <br>
              </div>
            </div>

            <%   if (session[:user_id].to_i == params[:id].to_i) %>
                  <div class="col-md-2">
                    <a  href="<%='/account/update/'+session[:user_id].to_s%>">
                    <input type="submit" class="btn" name="btnAddMore" style="text-align: center;" value="Edit Profile"/>
                    </a>
                  </div>
            <% end %>

          </div>

          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
              <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                  <div class="row">
                    <div class="col-md-6">
                      <label>Name</label>
                    </div>
                    <div class="col-md-6">
                      <p><%=@user.name%></p>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <label>Surname</label>
                    </div>
                    <div class="col-md-6">
                      <p><%=@user.surname%></p>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <label>Username</label>
                    </div>
                    <div class="col-md-6">
                      <p><%=@user.username%></p>
                    </div>
                  </div>

                  <%   if (session[:user_id].to_i == params[:id].to_i) %>

                      <div class="row">
                        <div class="col-md-6">
                          <label>Email</label>
                        </div>
                        <div class="col-md-6">
                          <p><%= @user.email%></p>
                        </div>
                      </div>

                  <% end %>

                </div>

              </div>
            </div>
          </div>

        <div class="row" style="margin-top: 25px;">

          <div class="col-md-12" style="text-align: center; alignment: center;">
            <a href="<%='/posts/'+@user.id.to_s%>">
              <input type="submit" class="btn" name="btnAddMore" style="text-align: center;" value="Show all posts"/>
            </a>
          </div>

        </div>

      </div>
    </div>
  <%= render "basic/footer" %>
</div>

</body>

</html>