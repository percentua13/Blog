<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
</head>

<body>
<div id="page-container">
    <div id="content-wrap">
      <%= render "basic/header" %>

      <div class="title">
        <h1>Registration</h1>
      </div>


        <form method="POST" action="/account/store" enctype="multipart/form-data" class="post-form">
          <%= token_tag %>

          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Name*</label>
            </div>
            <div class="col-md-6">
              <input type="text" name="name" class="form-control">
            </div>
          </div>


          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Surname*</label>
            </div>
            <div class="col-md-6">
              <input type="text" name="surname" class="form-control">
            </div>
          </div>



          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Username(without @)*</label>
            </div>
            <div class="col-md-6">
              <input type="text" name="username" class="form-control">
            </div>
          </div>



          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Email*</label>
            </div>
            <div class="col-md-6">
              <input type="text" name="email" class="form-control">
            </div>
          </div>


          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Password*</label>
            </div>
            <div class="col-md-6">
              <input type="text" name="password" class="form-control">
            </div>
          </div>


          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
              <label>Bio*</label>
            </div>
            <div class="col-md-6">
              <textarea name="about" class="form-control" cols="25" rows="10" style="resize: none;"></textarea>
            </div>
          </div>



          <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-8"> </div>

            <div class="col-md-4">
              <div class="from-group">
                <div><input type="submit" value="Create User"></div>
              </div>
            </div>
          </div>


        </form>

      </div>

    </div>
      <%= render "basic/footer" %>
  </div>

</body>

</html>